{
  "name": "pnpm-workspace-release-action",
  "version": "0.1.0",
  "main": "./dist/index.js",
  "bin": {
    "pnpm-workspace-release": "./bin/cli.js"
  },
  "scripts": {
    "build": "concurrently npm:build:*",
    "build:swc": "swc src -d dist",
    "build:ncc": "ncc build src/index.ts -o action",
    "dev": "swc src -d dist -w",
    "lint": "eslint --ext .ts . && tsc --noEmit",
    "postinstall": "husky install"
  },
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@actions/github": "^5.1.1",
    "@octokit/rest": "^19.0.13",
    "chalk": "^4.1.2",
    "code-suggester": "^4.3.3",
    "commander": "^11.0.0",
    "conventional-changelog-angular": "^6.0.0",
    "conventional-changelog-writer": "^6.0.1",
    "conventional-commits-parser": "^4.0.0",
    "git-raw-commits": "^3.0.0",
    "ora": "^5.4.1",
    "semver": "^7.5.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.7",
    "@commitlint/config-conventional": "^17.6.7",
    "@octokit/webhooks-definitions": "^3.67.3",
    "@swc/cli": "^0.1.62",
    "@swc/core": "^1.3.74",
    "@types/conventional-changelog-writer": "^4.0.3",
    "@types/conventional-commits-parser": "^3.0.3",
    "@types/git-raw-commits": "^2.0.1",
    "@types/node": "^20.4.7",
    "@types/semver": "^7.5.0",
    "@typescript-eslint/eslint-plugin": "^6.2.1",
    "@typescript-eslint/parser": "^6.2.1",
    "@vercel/ncc": "^0.36.1",
    "concurrently": "^8.2.0",
    "eslint": "^8.46.0",
    "eslint-config-prettier": "^8.10.0",
    "eslint-plugin-import": "^2.28.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3",
    "prettier": "^3.0.1",
    "typescript": "^5.1.6"
  },
  "lint-staged": {
    "*.{js,ts,cjs}": [
      "eslint"
    ]
  }
}
